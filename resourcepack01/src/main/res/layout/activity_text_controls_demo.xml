<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".basiccontrols.TextControlsDemoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这个是文本控件"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="这个是红色16sp文本控件"
            android:textColor="@color/colorRed"
            android:textSize="@dimen/sp_16"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="这个是绿色18sp加粗文本控件"
            android:textColor="@color/colorGreen"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="这个是绿色18sp倾斜文本控件"
            android:textColor="@color/colorBlue"
            android:textSize="@dimen/sp_18"
            android:textStyle="italic"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="这个是紫色18sp加粗且倾斜文本控件"
            android:textColor="@color/colorPurple"
            android:textSize="@dimen/sp_18"
            android:textStyle="italic|bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/colorCyan"
            android:text="这个是青色背景16sp红色字文本控件"
            android:textColor="@color/colorRed"
            android:textSize="@dimen/sp_16"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tv_text_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/color009688"
            android:padding="@dimen/dp_15"
            android:text="待回显的内容"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_20"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_100"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_edit_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:gravity="bottom"
                android:hint="这是一般效果的文本输入框"
                tools:ignore="Autofill,HardcodedText,TextFields" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:text="Go"
                android:onClick="submit"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:hint="这是红色(输入文本的颜色)文本输入框"
            android:inputType="text"
            android:textColor="@color/colorRed"
            tools:ignore="Autofill,HardcodedText" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:hint="这是蓝色(提示文本的颜色)文本输入框"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:textColor="@color/colorGreen"
            android:textColorHint="@color/colorBlue"
            tools:ignore="HardcodedText" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/cyan_corners10_bg_style"
            android:hint="这是带背景颜色的文本输入框"
            android:inputType="textMultiLine"
            android:padding="@dimen/dp_8"
            tools:ignore="Autofill,HardcodedText" />

    </LinearLayout>

</ScrollView>