<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".basiccontrols.ButtonControlsDemoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:drawableStart="@mipmap/icon_item_tips"
            android:drawableLeft="@mipmap/icon_item_tips"
            android:drawablePadding="@dimen/dp_8"
            android:text="一般按钮"
            android:textColor="@color/colorGray444"
            android:textSize="@dimen/sp_20"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/bt_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:text="一个一般的按钮"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:drawableStart="@mipmap/icon_item_tips"
            android:drawableLeft="@mipmap/icon_item_tips"
            android:drawablePadding="@dimen/dp_8"
            android:text="图片按钮"
            android:textColor="@color/colorGray444"
            android:textSize="@dimen/sp_20"
            tools:ignore="HardcodedText" />

        <ImageButton
            android:id="@+id/ibt_image_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:src="@android:drawable/ic_menu_call"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:drawableStart="@mipmap/icon_item_tips"
            android:drawableLeft="@mipmap/icon_item_tips"
            android:drawablePadding="@dimen/dp_8"
            android:text="单选按钮"
            android:textColor="@color/colorGray444"
            android:textSize="@dimen/sp_20"
            tools:ignore="HardcodedText" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:text="一个单选按钮"
            android:textSize="@dimen/sp_16"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:drawableStart="@mipmap/icon_item_tips"
            android:drawableLeft="@mipmap/icon_item_tips"
            android:drawablePadding="@dimen/dp_8"
            android:text="一组单选按钮"
            android:textColor="@color/colorGray444"
            android:textSize="@dimen/sp_20"
            tools:ignore="HardcodedText" />

        <RadioGroup
            android:id="@+id/rg_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_radio_button_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A"
                android:textSize="@dimen/sp_16"
                tools:ignore="HardcodedText" />

            <RadioButton
                android:id="@+id/rb_radio_button_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_10"
                android:text="B"
                android:textSize="@dimen/sp_16"
                tools:ignore="HardcodedText" />

            <RadioButton
                android:id="@+id/rb_radio_button_third"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C"
                android:textSize="@dimen/sp_16"
                tools:ignore="HardcodedText" />

        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:drawableStart="@mipmap/icon_item_tips"
            android:drawableLeft="@mipmap/icon_item_tips"
            android:drawablePadding="@dimen/dp_8"
            android:text="自定义样式的单选按钮"
            android:textColor="@color/colorGray444"
            android:textSize="@dimen/sp_20"
            tools:ignore="HardcodedText" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:button="@drawable/radio_button_style_first"
                android:text="风格A"
                android:textSize="@dimen/sp_16"
                tools:ignore="HardcodedText" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_10"
                android:background="@null"
                android:button="@drawable/radio_button_style_second"
                android:text="风格B"
                android:textSize="@dimen/sp_16"
                tools:ignore="HardcodedText" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:button="@drawable/radio_button_style_third"
                android:text="风格C"
                android:textSize="@dimen/sp_16"
                tools:ignore="HardcodedText" />

        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:drawableStart="@mipmap/icon_item_tips"
            android:drawableLeft="@mipmap/icon_item_tips"
            android:drawablePadding="@dimen/dp_8"
            android:text="复选按钮"
            android:textColor="@color/colorGray444"
            android:textSize="@dimen/sp_20"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_check_box_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:text="复选按钮1"
                android:textSize="@dimen/sp_16"
                tools:ignore="HardcodedText" />

            <CheckBox
                android:id="@+id/cb_check_box_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="复选按钮2"
                android:textSize="@dimen/sp_16"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:drawableStart="@mipmap/icon_item_tips"
            android:drawableLeft="@mipmap/icon_item_tips"
            android:drawablePadding="@dimen/dp_8"
            android:text="自定义样式的复选按钮"
            android:textColor="@color/colorGray444"
            android:textSize="@dimen/sp_20"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="horizontal">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="风格A"
                android:textSize="@dimen/sp_16"
                android:theme="@style/CheckBoxStyleFirst"
                tools:ignore="HardcodedText" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_10"
                android:text="风格B"
                android:textSize="@dimen/sp_16"
                android:theme="@style/CheckBoxStyleSecond"
                tools:ignore="HardcodedText" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="风格C"
                android:textSize="@dimen/sp_16"
                android:theme="@style/CheckBoxStyleThird"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:drawableStart="@mipmap/icon_item_tips"
            android:drawableLeft="@mipmap/icon_item_tips"
            android:drawablePadding="@dimen/dp_8"
            android:text="开关按钮"
            android:textColor="@color/colorGray444"
            android:textSize="@dimen/sp_20"
            tools:ignore="HardcodedText" />

        <Switch
            android:id="@+id/sw_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:text="一个基本的开关按钮"
            android:textSize="@dimen/sp_16"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:drawableStart="@mipmap/icon_item_tips"
            android:drawableLeft="@mipmap/icon_item_tips"
            android:drawablePadding="@dimen/dp_8"
            android:text="自定义样式的开关按钮"
            android:textColor="@color/colorGray444"
            android:textSize="@dimen/sp_20"
            tools:ignore="HardcodedText" />

        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@null"
            android:showText="true"
            android:switchTextAppearance="@style/SwitchTextStyle"
            android:text="自定义样式的开关按钮"
            android:textOff="OFF"
            android:textOn="ON"
            android:textSize="@dimen/sp_16"
            android:thumb="@drawable/switch_thumb"
            android:track="@drawable/switch_track"
            tools:ignore="HardcodedText,UnusedAttribute" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_15" />

    </LinearLayout>

</ScrollView>