        <shape android:shape="rectangle">
            <solid android:color="@color/colorDFAA09" />
            <corners android:radius="@dimen/dp_15" />
        </shape>
    </item>
    <item android:state_enabled="false" android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorGrayDDD" />
            <corners android:radius="@dimen/dp_15" />
        </shape>
    </item>
    <item android:state_enabled="true" android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorFFC107" />
            <corners android:radius="@dimen/dp_15" />
        </shape>
    </item>
</selector>